/* pages/index/sign/sign.wxss */

.btn {
  background: #3891f8;
  color: #fff;
  font-size: 30rpx;
  line-height: 40px;
  margin: 0px 12px;
  border-radius: 24px;
  margin-top: 14px;
}

map {
  height: 260px;
}

.tit {
  font-size: 14px;
  line-height: 30px;
  margin-left: 15px;
}

.upload {
  width: 60px;
  height: 60px;
  margin-left: 15px;
  text-align: center;
  border: 4px solid #f5f5f5;
  border-radius: 10px;
}

.upload image {
  width: 41px;
  height: 31px;
  margin-top: 11px;
}

.address_cell {
  padding: 6px 12px;
  padding-bottom: 12px;
  font-size: 13px;
  color: #242729;
  margin-top: 20px;
  box-shadow: 0 0 4px 2px rgba(0, 0, 0, 0.10);
}

.image_cell {
  vertical-align: middle;
  float: right;
}

.address {
  line-height: 60px;
  height: 60px;
  display: inline-block;
  vertical-align: middle;
}

.data-cell {
  position: fixed;
  top: 64px;
  left: 0px;
  width: 100%;
  background: #fff;
  padding: 6px 0px;
  font-size: 12px;
  color: #c5c5c5;
}

.data-cell cover-image {
  display: inline-block;
  width: 18px;
  height: 18px;
  margin-left: 12px;
}

.data-cell cover-view {
  display: inline-block;
  margin-left: 4px;
  width:80%;
}

.modal {
  text-align: center;
}

.modalContent {
  display: inline-block;
  width: 275px;
  height: 285px;
  font-size: 12px;
  margin-top: 50%;
  position: relative;
}

.tiem-cell {
  font-size: 23px;
  color: #1a84ff;
  position: absolute;
  top: 124px;
  left: 80px;
}
.tiem-cell text:nth-child(1){
  margin-right: 10px;
}
.tiem-cell text:nth-child(2){
  font-weight: bold;
}
.btn-know{
  display: inline-block;
  width:186px;
  line-height: 30px;
  position: absolute;
  top:220px;
  left: 46px;
  background: #fff;
  color: #1a84ff;
  border-radius: 20px;
  font-size: 14px;
}
