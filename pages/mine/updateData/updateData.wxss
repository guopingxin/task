/* pages/index/updateData/updateData.wxss */
.container{
  width:100%;
  height: 100vh;
  background: rgb(249, 249, 249);
  opacity: 1
}
.header{
  width:100%;
  position: relative;
}
.change_text{
  position: absolute;
  bottom: 0rpx;
  right: 30rpx;
  color:#fff;
  font-size: 30rpx;
  display: inline-block;
  width: 100px;
  text-align: center;
}
swiper-item{
  display: inline-block;
  width:100%;
  height: 180px;
}
swiper-item image{
  display: inline-block;
  width:100%;
  height: 180px;
}
.header image{
  width:100%;
  height: 180px!important;
}
.content{
  margin: 0px auto;
  margin-top:10px;
  padding-bottom: 10px;
  background: #fff;
}
form{
  display: block;
  width:100%;
  text-align: center;
}
form .titleText{
  text-align: left;
}
.eachInfor{
 display: inline-block;
 width:94%;
 line-height: 40px;
  font-size: 13px;
  color:#666;
  border-bottom: 1px solid #eee;
}
.eachInfor .label_con{
  display: inline-block;
  width:70%;
  text-align: left;
  vertical-align: middle;
}
input{
  line-height: 40px;
  height: 40px;
  vertical-align: middle;
}
label{
  text-align: left;
  display: inline-block;
  width:30%;
  color:rgb(51, 51, 51);
}
image{
  width:20px;
  vertical-align: middle;
  height: 20px;
}

.eachFrame{
  display: inline-block;
  width:80px;
  height: 80px;
  border:1px solid #D9D9D9;
  border-radius: 2px;
  text-align: center;
  margin: 10px;
}
.picShow{
   display: inline-block;
  width:80px;
  height: 80px;
  vertical-align: top;
  margin: 10px;
}
.photograpy{
  width:80px;
  height:80px;
  border:1px solid #fff;
}
.weui-uploader__img{
  width: 100%;
  height: 100%;
}
.inforData{
  color:#3A3937;
  font-size: 12px;
}
button{
  background:#00A3D9;
  color:#fff;
  width:94%;
  margin-top:28px;
  margin-bottom: 30px;
  height: 80rpx;
  line-height: 80rpx;
  font-size:30rpx;
}
.modal{
  position: fixed;
  width:100%;
  height: 100vh;
  top:0px;
  left: 0px;
  background: rgba(100,100,100,0.4);
  text-align: center;
}
.modal-content{
  background: #fff;
  display: inline-block;
  width:80%;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  margin-top: 160px;
  color:#404040;
}