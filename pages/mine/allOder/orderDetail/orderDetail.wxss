/* pages/index/mine/myOrder/Payment/Payment.wxss */
@import '../../../index/checkLoss/checkLossDeatail/checkLossDeatail.wxss';
.main_content {
  background: #eee;
  overflow: scroll;
}
.user_infor {
  background: #fff;
  font-size: 0px;
  padding: 15px 0px;
  margin-bottom: 15px;
}

.user_avatar, .user_phone {
  display: inline-block;
  text-align: left;
  width: 50%;
}

.user_avatar view {
  display: inline-block;
  vertical-align: middle;
}

.user_phone view {
  display: inline-block;
  vertical-align: middle;
}

.user_icon image {
  width: 20px;
  height: 20px;
  margin: 0px 8px 0px 15px;
}

.nickname {
  font-size: 15px;
  color: #333;
}

.servicer_cell {
  background: #fff;
  text-align: left;
  margin-bottom: 10px;
}

.servicer_text {
  color: #b3b3b3;
  font-size: 12px;
  line-height: 32px;
  display: inline-block;
  margin-left: 15px;
}
.service_infor{
  border-top: 1rpx solid #eee;
  padding: 18px 12px 15px 16px;
}

.service_avatar, .order_infor, .right_icon {
  display: inline-block;
  vertical-align: top;
}

.service_avatar image{
  width: 70px;
  height: 70px;
  margin-right: 16px;
}
.order_infor{
  width:60%;
}
.service_name {
  font-size: 15px;
  color: #333;
  margin-top:14px;
}
.service_address,.service_num{
  margin-top: 14px;
   font-size: 12px;
  color: #B3B3B3;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.right_icon{
  float:right;
}
.right_icon image{
  width: 15px;
  height: 15px;
  margin-top: 27px;
}
.service_item{
  background: #fff;
  text-align: left;
  font-size: 0px;
  margin-bottom: 10px;
}
.service_item .service_infor{
  padding: 18px 0px 15px 0px;
  margin: 0px 15px;
  border-bottom: 1rpx solid #eee;
}
.service_item .service_name{
   margin-top: 3px;
}
.service_item .service_num{
 margin-top: 7px;
}
.service_price{
   margin-top: 7px;
   font-size: 14px;
   color:#3891F8;
   font-weight: bold;
}
.order_infor_order{
  display: inline-block;
  padding: 15px 0px 15px 15px;
  font-size: 12px;
  color:#B3B3B3;
  line-height: 22px;
}
.copy_cell{
  padding: 1px 6px;
  border: 1rpx solid #B3B3B3;
  margin-left: 26px;
  border-radius: 2px;
  font-size: 10px;
}
.bottom_cell{
  position: fixed;
  bottom: 0px;
  left: 0px;
  display: inline-block;
  width: 100%;
  text-align: left;
  background: #fff;
  height: 60px;
}
.bottom_left,.bottom_right{
  display: inline-block;
  vertical-align: middle;
  line-height: 60px;
}
.bottom_left{
  margin-left: 15px;
}

.bottom_right{
  float:right;
}
.bottom_right view{
  display: inline-block;
  width:105px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  color: #fff;
  font-size: 18px;
}
.cancel_btn{
  background: #FF9701;
}
.pay_btn{
  background:#F15626;
}
.service_infor{
  font-size: 12px;
  color:#333;
}
.order_btn{
  text-align: right;
}
.each_btn{
  margin: 15px 0px;
  font-size:15px;
  text-align: center;
  margin-right: 15px;
  display: inline-block;
  border:1rpx solid #3891F8;
  color:#3891F8;
  border-radius: 200px;
}
.btnbac{
  background:#3891F8;
  color:#fff;
  border:1rpx solid #3891F8;
}
.each_btn text{
  display: inline-block;
  margin: 7px 0px;
  width: 100px;
}